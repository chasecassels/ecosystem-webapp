<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	
	<display-name>SimpleApp</display-name>
	<welcome-file-list>
		<welcome-file>ControllerServlet</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>EcozoneServlet</servlet-name>
		<servlet-class>simple.EcozoneServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>EcozoneServlet</servlet-name>
		<url-pattern>/EcozoneServlet</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EcozoneServlet</servlet-name>
		<url-pattern>/new</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EcozoneServlet</servlet-name>
		<url-pattern>/insert</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EcozoneServlet</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EcozoneServlet</servlet-name>
		<url-pattern>/edit</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EcozoneServlet</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EcozoneServlet</servlet-name>
		<url-pattern>/list</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EcozoneServlet</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EcozoneServlet</servlet-name>
		<url-pattern>/sort</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EcozoneServlet</servlet-name>
		<url-pattern>/about</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EcozoneServlet</servlet-name>
		<url-pattern>/error</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EcozoneServlet</servlet-name>
		<url-pattern>/stats</url-pattern>
	</servlet-mapping>
	
	
	
	
</web-app>